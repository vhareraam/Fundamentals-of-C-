    if(a >= b && a >= c)
    {
        if(b >= c)
        {
             cout<<"The treasure is in box which has number "<<b<<endl; 
        }
        else
        {
           cout<<"The treasure is in box which has number "<<c<<endl;
        }
    }
    else if(b >= a && b >= c)
 {
        if(a >= c)
        {
            cout<<"The treasure is in box which has number "<<a<<endl;
        }
        else
        {
            cout<<"The treasure is in box which has number "<<c<<endl;
        }
